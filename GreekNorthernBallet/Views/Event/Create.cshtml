@model EventViewModel

<head runat="server">
  <meta charset="utf-8" />
</head>
<br />
<form enctype="multipart/form-data" asp-controller="Event" asp-action="PostCreate" method="post">
  <div class="form-group">
    <label asp-for="title"></label>
    <input asp-for="title" class="form-control">
    <span asp-validation-for="title" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="description"></label>
    <input asp-for="description" class="form-control">
    <span asp-validation-for="description" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="cost"></label>
    <input asp-for="cost" class="form-control">
    <span asp-validation-for="cost" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="date"></label>
    <input asp-for="date" type="date" class="form-control">
    <span asp-validation-for="date" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="numOfParticipants"></label>
    <input asp-for="numOfParticipants" class="form-control">
    <span asp-validation-for="numOfParticipants" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="uploadImage"></label>
    <div class="custom-file">
      <input asp-for="uploadImage" class="form-control custom-file-input">
      <label class="custom-file-label">Choose File..</label>
    </div>
  </div>

  <button type="submit" class="btn btn-primary" runat="server">Submit</button>

  @section  Scripts{ 
    <script>
      $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
          var fileName = $(this).val().split("\\").pop();
          $(this).next('.custom-file-label').html(fileName);
        });
      });
    </script>
  }

</form>
